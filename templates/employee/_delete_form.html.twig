<form method="post" action="{{ path('employee_delete', {'uuid': employee.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.uuid) }}">
    <button class="btn btn-outline-danger btn-sm">delete</button>
</form>
