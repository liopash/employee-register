{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>
    {# <img src="{{ asset('images/employees.svg') }}" alt="avatar" width="100px" id="employeeAvatar" /> #}
    <table class="table">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ employee.uuid }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Date of birth</th>
                <td>{{ employee.dob }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ employee.getAge }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ employee.getShowGender }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ employee.getRole }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('employee_edit', {'uuid': employee.uuid}) }}" class="btn btn-outline-primary">edit</a>
    
    <div class="mt-1">
    {{ include('employee/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('employee_index') }}">back to list</a>
{% endblock %}
